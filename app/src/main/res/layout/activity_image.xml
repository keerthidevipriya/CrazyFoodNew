<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardviewlayoutmargin"
    android:padding="@dimen/cardview_default_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="@dimen/cardlayoutelevation"
        tools:targetApi="lollipop">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/imagemainheight"
        android:id="@+id/id_first_image"
        android:layout_margin="@dimen/iagemargin"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/display_recipe_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/id_first_name"
        android:text="@string/no_title"
        android:textSize="@dimen/d"
        android:paddingStart="@dimen/paddingtext"
        android:paddingEnd="@dimen/paddingtext"
        android:layout_margin="@dimen/layoutmargin"
        android:maxLines="1"
        android:textColor="@color/color_darkpink" />
    </LinearLayout>
</android.support.v7.widget.CardView>